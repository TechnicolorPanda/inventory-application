<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1 class = 'title'><%= title %></h1>
    <div class = 'container-fluid'>
    <%- include('layout') -%>
    <div class = 'main-body'>
      <ul>
        <% if (item_list) { %>
          <% item_list.sort(function(a, b) { %>
            <% let textA = a.pattern.toUpperCase(); %>
            <% let textB = b.pattern.toUpperCase(); %>
            <% return (textA < textB) ? -1 : (textA > textB) ? 1 : 0; %>
          <% }); %>
          <% item_list.map(item => { %>
            <li><a href=item.url <%= item.pattern %></a>
                |  <%= item.category.name %>
            </li>
          <% }) %>
        <% } else { %>
          <li>There are no books.</li>
        <% } %>
      </ul>
    </div>
    </div>
  </body>
</html>
